<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/contro_view">

    <TextView
        android:layout_marginHorizontal="@dimen/dp20"
        android:id="@+id/tv_preview"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/preview"
        style="@style/TextViewBaseToolbar"/>
    <TextView
        android:layout_marginHorizontal="@dimen/dp20"
        android:id="@+id/tv_text_sample"
        android:textSize="@dimen/sp20"
        android:layout_width="wrap_content"
        android:paddingVertical="@dimen/dp10"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preview"
        style="@style/TextViewBaseToolbar"/>
    <EditText
        android:layout_marginHorizontal="@dimen/dp20"
        android:paddingStart="@dimen/dp10"
        android:hint="@string/your_text"
        android:layout_marginTop="@dimen/dp20"
        android:padding="@dimen/dp10"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_sample"
        style="@style/TextViewBaseToolbar"
        android:id="@+id/et_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        tools:listitem="@layout/item_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rcy_font"
        app:layout_constraintTop_toBottomOf="@id/et_text"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toTopOf="@+id/ll_layout"
        android:background="#E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_marginTop="@dimen/dp10"
        android:paddingVertical="@dimen/dp10"
        android:paddingHorizontal="@dimen/dp10"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@id/rcy_font"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp3"
            android:src="@drawable/ic_close"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/keyboard"
                android:layout_marginEnd="@dimen/dp20"
                android:padding="@dimen/dp3"
                android:src="@drawable/ic_keyboard"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/color"
                android:layout_marginEnd="@dimen/dp20"
                android:padding="@dimen/dp8"
                android:src="@drawable/palette"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/font"
                android:layout_marginEnd="@dimen/dp10"
                android:padding="@dimen/dp6"
                android:src="@drawable/ic_front"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/done"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp3"
            android:src="@drawable/ic_done"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
         layout="@layout/toolbar_export"/>

    <RelativeLayout
        android:id="@+id/rlback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rvselect"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/rlphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <jp.co.cyberagent.android.gpuimage.GPUImageView
                android:id="@+id/gpuview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/ivframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llcontrol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/adView"
        android:background="#FEF8F6"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ln_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp10">

            <ImageView
                android:id="@+id/iceffect"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/effect" />

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:id="@+id/tv_effect"
                style="@style/TextViewBaseToolbar"
                android:layout_marginTop="@dimen/dp5"
                android:text="@string/effect"
                android:textColor="@color/color_text"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:paddingVertical="@dimen/dp10"-->
<!--            android:id="@+id/ln_change"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_weight="1"-->
<!--            android:gravity="center"-->
<!--            android:orientation="vertical">-->

<!--            <ImageView-->
<!--                android:id="@+id/icrandom"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/change" />-->

<!--            <TextView-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"-->
<!--                android:layout_width="match_parent"-->
<!--                android:id="@+id/tv_change"-->
<!--                style="@style/TextViewBaseToolbar"-->
<!--                android:layout_marginTop="@dimen/dp5"-->
<!--                android:text="@string/Change"-->
<!--                android:textColor="@color/color_text"-->
<!--                android:textSize="@dimen/sp12" />-->
<!--        </LinearLayout>-->

        <LinearLayout
            android:paddingVertical="@dimen/dp10"
            android:id="@+id/ln_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icframe"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/filter_frames" />

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:id="@+id/tv_frame"
                style="@style/TextViewBaseToolbar"
                android:layout_marginTop="@dimen/dp5"
                android:text="@string/Frame"
                android:textColor="@color/color_text"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:paddingVertical="@dimen/dp10"
            android:id="@+id/ln_sticker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icsnap"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/sticker" />

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:id="@+id/tv_sticker"
                style="@style/TextViewBaseToolbar"
                android:layout_marginTop="@dimen/dp5"
                android:text="@string/Sticker"
                android:textColor="@color/color_text"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:paddingVertical="@dimen/dp10"
            android:id="@+id/ln_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ictext"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/insert_text" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_text"
                style="@style/TextViewBaseToolbar"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:text="@string/Text"
                android:textColor="@color/color_text"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llchange"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/adView"
        android:background="#FEF8F6"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="7.0">

        <ImageView
            android:id="@+id/ivchangeexposure"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditlux" />

        <ImageView
            android:id="@+id/ivchangecontrast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditcontrast" />

        <ImageView
            android:id="@+id/ivchangesharpen"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditshapren" />

        <ImageView
            android:id="@+id/ivchangetemperature"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditwarmth" />

        <ImageView
            android:id="@+id/ivchangehighlight"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/icedithighlights" />

        <ImageView
            android:id="@+id/ivchangeshadow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditshadow" />

        <ImageView
            android:id="@+id/ivchangevignette"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:src="@drawable/iceditvignette" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llcontrol" />

    <RelativeLayout
        android:id="@+id/rlslider"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/llcontrol"
        android:background="@color/ucrop_color_default_logo_black"
        android:gravity="center">

        <TextView
            android:id="@+id/tvslider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/sbslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvslider"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:max="10"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progress="10"
            android:progressDrawable="@drawable/slidertran" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rltext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/toolbar"
        android:background="#2a2a2a"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rlauto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/afltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="3"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                app:minTextSize="30sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlauto"
            android:orientation="horizontal"
            android:weightSum="5.0">

            <ImageView
                android:id="@+id/ivchangetext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:src="@drawable/ictype" />

            <ImageView
                android:id="@+id/ivchangefont"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:src="@drawable/icfont" />

            <ImageView
                android:id="@+id/ivchangecolor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:src="@drawable/iccolor" />

            <ImageView
                android:id="@+id/ivcircle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:src="@drawable/iccircle"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivalign"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:src="@drawable/iccentertextalignment"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lltext"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lltext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:paddingLeft="10dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/ivblur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlblur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/ivblur"
        android:background="#e62a2a2a"
        android:visibility="gone" />
</RelativeLayout>
